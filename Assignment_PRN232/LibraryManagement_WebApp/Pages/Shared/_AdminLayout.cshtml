@*
  File: Pages/Shared/_AdminLayout.cshtml
*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="bg-dark text-white py-3 mb-0">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/Admin/Users" class="text-white text-decoration-none h4 mb-0">Admin Thư viện</a>
            <nav>
                <a href="/Admin/Users" class="text-white me-3">Người dùng</a>
                <a href="/Admin/Books" class="text-white me-3">Sách</a>
                <a href="/Admin/Authors" class="text-white me-3">Tác giả</a>
                <a href="/Admin/Publishers" class="text-white me-3">NXB</a>
                <a href="/Admin/Categories" class="text-white me-3">Thể loại</a>
                <a href="/Admin/Borrows" class="text-white me-3">Mượn trả</a>
                <a href="/Admin/Fines" class="text-white">Phạt</a>
            </nav>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar pt-4" style="min-height:100vh;">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" href="/Admin/Users">Quản lý người dùng</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Admin/Books">Quản lý sách</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Admin/Authors">Quản lý tác giả</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Admin/Publishers">Quản lý NXB</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Admin/Categories">Quản lý thể loại</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Admin/Borrows">Quản lý mượn trả</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Admin/Fines">Quản lý phạt</a></li>
                    </ul>
                </div>
            </nav>
            <main class="col-md-10 ms-sm-auto px-md-4 pt-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="bg-light text-center py-3 border-top mt-4">
        <div class="container">
            &copy; 2025 - Admin Thư viện. Mọi quyền được bảo lưu.
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 