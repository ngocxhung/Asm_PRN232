@page
@model LibraryManagement_WebApp.Pages.User.HomeModel
@{
    ViewData["Title"] = "Trang chủ người dùng";
}
<div class="container mt-4">
    <h2>Chào mừng bạn đến với Thư viện!</h2>
    <p>Hệ thống quản lý thư viện giúp bạn dễ dàng tìm kiếm, mượn sách và theo dõi lịch sử mượn trả.</p>
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Tìm kiếm & Xem sách</h5>
                    <p class="card-text">Khám phá kho sách phong phú, tìm kiếm theo tên, thể loại, tác giả...</p>
                    <a href="/UserPage/Books" class="btn btn-primary">Xem sách</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Sách đang mượn</h5>
                    <p class="card-text">Xem sách đang mượn, gia hạn hoặc trả sách.</p>
                    <a href="/UserPage/CurrentBorrows" class="btn btn-primary">Sách đang mượn</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Quản lý phạt</h5>
                    <p class="card-text">Xem và thanh toán các khoản phạt do trả sách trễ hạn.</p>
                    <a href="/UserPage/Fines" class="btn btn-primary">Quản lý phạt</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
} 