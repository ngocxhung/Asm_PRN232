@page
@model LibraryManagement_WebApp.Pages.User.HomeModel
@{
    ViewData["Title"] = "Trang chủ người dùng";
}
<div class="container mt-4">
    <h2>Chào mừng bạn đến với Thư viện!</h2>
    <p>Hệ thống quản lý thư viện giúp bạn dễ dàng tìm kiếm, mượn sách và theo dõi lịch sử mượn trả.</p>
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Tìm kiếm & Xem sách</h5>
                    <p class="card-text">Khám phá kho sách phong phú, tìm kiếm theo tên, thể loại, tác giả...</p>
                    <a href="/User/Books" class="btn btn-primary">Xem sách</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Mượn sách</h5>
                    <p class="card-text">Đăng ký mượn sách trực tuyến, theo dõi trạng thái mượn trả.</p>
                    <a href="/User/Borrow" class="btn btn-primary">Mượn sách</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Lịch sử mượn trả</h5>
                    <p class="card-text">Xem lại các sách đã mượn, trả, và tình trạng phạt (nếu có).</p>
                    <a href="/User/History" class="btn btn-primary">Lịch sử mượn</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
} 