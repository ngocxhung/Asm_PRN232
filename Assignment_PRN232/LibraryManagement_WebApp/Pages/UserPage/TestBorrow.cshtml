@page
@model LibraryManagement_WebApp.Pages.UserPage.TestBorrowModel
@{
    ViewData["Title"] = "Test Borrow";
    Layout = "_UserLayout";
}

<div class="container py-4">
    <h2>Test Borrow Function</h2>
    
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-@(Model.IsSuccess ? "success" : "danger")">
            @Model.Message
        </div>
    }
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>User Session Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>User ID:</strong> @Model.UserId</p>
                    <p><strong>User Role:</strong> @Model.UserRole</p>
                    <p><strong>Has Token:</strong> @Model.HasToken</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Test Borrow Book</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Book ID:</label>
                            <input type="number" name="BookId" class="form-control" value="1" min="1" max="5">
                        </div>
                        <button type="submit" class="btn btn-primary">Test Borrow</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    @if (Model.CurrentBorrows != null && Model.CurrentBorrows.Any())
    {
        <div class="row mt-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Current Borrows</h5>
                    </div>
                    <div class="card-body">
                        <ul>
                            @foreach (var borrow in Model.CurrentBorrows)
                            {
                                <li>Book ID: @borrow.BookId, Status: @borrow.Status, Date: @borrow.BorrowDate.ToString("dd/MM/yyyy")</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div> 