@page
@model LibraryManagement_WebApp.Pages.AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-3 mb-4">
            <div class="card shadow h-100">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Quản trị</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="/Admin/Users"><i class="bi bi-people"></i> Quản lý người dùng</a></li>
                        <li class="list-group-item"><a href="/Admin/Books"><i class="bi bi-book"></i> Quản lý sách</a></li>
                        <li class="list-group-item"><a href="/Admin/Borrows"><i class="bi bi-journal-arrow-down"></i> Quản lý mượn trả</a></li>
                        <li class="list-group-item"><a href="/Admin/Categories"><i class="bi bi-tags"></i> Quản lý thể loại</a></li>
                        <li class="list-group-item"><a href="/Admin/Publishers"><i class="bi bi-building"></i> Quản lý NXB</a></li>
                        <li class="list-group-item"><a href="/Admin/Authors"><i class="bi bi-person-lines-fill"></i> Quản lý tác giả</a></li>
                        <li class="list-group-item"><a href="/Admin/Fines"><i class="bi bi-cash-coin"></i> Quản lý phạt</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-7 d-flex align-items-center">
            <div class="w-100 text-center">
                <h2 class="mb-3">Chào mừng Admin!</h2>
                <p class="lead">Chọn chức năng quản trị ở menu bên trái để bắt đầu quản lý hệ thống thư viện.</p>
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Admin" style="max-width:120px; margin-top:20px;" />
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
} 